<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="../style.css">
</head>
<body>
<div class="container">

   <!--navigation buttons  -->
  <div class="page-header text-center">
      <a href="/profile" class="btn btn-light" >Profile</a>
      <a href="/feed" class="btn btn-light">Feed</a>
      <a href="/logout" class="btn btn-light">Logout</a>
  </div>

  
 
  <div class="row box mt-5">

      
    <div class=" mt-5">
      
     
        <!-- for loop for the image  -->
        <% for(var i=0; i<posts.length; i++) {%>

          <section>

            <h1>Post by: <%= posts[i].user %></h1>

            <span>Caption: <%= posts[i].caption %></span>

            <i class="fas fa-heart" data-id="<%= posts[i]._id %>"></i>
            
            <span class="mb-5"><%= posts[i].likes %></span>

            <img src="../<%= posts[i].img %>" alt="" class="m-3">
            
            

           
            
            <section> 
          
              <!-- for loop for comments -->
              <% for (let j = 0; j <comments.length; j++) {%>
              <ul>
                <li class="comments">
                  <h4><%= comments[j].comment %></h4>
                  <span>-<%= comments[j].user%> </span>
                </li>

              </ul>
              <% } %>

              <form action="../makeComment/<%= posts[i]._id %>" method="POST">
                <label for="comment">Make a Comment</label>
                <input type="text" name="comment" id="comment">
                <button type="submit" id="submit" class="btn btn-light">Submit</button>
              </form>

            </section>

          </section>
        <% } %>
      </ul>
    </div>
  </div>
</div>

<script src="../main.js"></script>

</body>
</html>
