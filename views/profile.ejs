<!doctype html>
<html>
<head>
    <title>PostIt Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> Profile Page</h1>
        <a href="/feed" class="btn btn-light mb-3 mx-2">Feed</a>
        <a href="/logout" class="btn btn-danger mb-3 mx-2">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="topBox">
            <div class="well" >
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-light mb-3 mx-2">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-light mb-3 mx-2">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="box">
          <h3>Posts</h3>
          <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              <a class="text" href="/post/<%= posts[i]._id %>">

                <img src="<%= posts[i].img %>" alt="">
              </a>
                <h4>User: <%= posts[i].user %></h4>
              <h4>Caption: <%= posts[i].caption %></h4>

            </li>
          <% } %>
          </ul>

          <h2>Make A Post</h2>
        <% if (user.local.email) { %>
          <form action="/makePost" enctype="multipart/form-data" method="POST">
            <input type="file" name="file-to-upload" class="btn btn-light mb-3 mx-2">
            <input type="text" name="caption" placeholder="caption" class="caption">
            <button type="submit" class="btn-purple btn-light mb-3 mx-2">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>